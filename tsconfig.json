{
  "compilerOptions": {
    "removeComments": false,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "outDir": "build",
    "module": "commonjs",
    "target": "ESNEXT",
    "moduleResolution": "node",
    "sourceMap": true,
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ]
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": [
    "src"
  ]
}